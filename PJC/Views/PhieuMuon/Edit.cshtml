@model ASS_QLTV_API.Models.Phieumuon

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <h1 class="mt-4">Chỉnh sửa phiếu mượn</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Home">Trang chủ</a></li>
        <li class="breadcrumb-item active">Chỉnh sửa phiếu mượn</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <a class="btn btn-success" asp-action="Index" asp-controller="PhieuMuon">Về danh sách</a>
        </div>
        <div class="card-body">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="MaPm" class="control-label"></label>
                        <input asp-for="MaPm" class="form-control" readonly />
                        <span asp-validation-for="MaPm" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MaDg" class="control-label"></label>
                        <input asp-for="MaDg" class="form-control" readonly />
                        <span asp-validation-for="MaDg" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NgayMuon" class="control-label"></label>
                        <input asp-for="NgayMuon" class="form-control" />
                        <span asp-validation-for="NgayMuon" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NgayHenTra" class="control-label"></label>
                        <input asp-for="NgayHenTra" class="form-control" />
                        <span asp-validation-for="NgayHenTra" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SoLuongMuon" class="control-label"></label>
                        <input asp-for="SoLuongMuon" class="form-control" />
                        <span asp-validation-for="SoLuongMuon" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="User" class="control-label"></label>
                        <input asp-for="User" class="form-control" />
                        <span asp-validation-for="User" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>






