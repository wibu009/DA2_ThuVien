@model IEnumerable<ASS_QLTV_API.Models.Sach>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="mt-4">Thống Kê</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Home">Trang chủ</a></li>
        <li class="breadcrumb-item active">Thống kê</li>
    </ol>
    <div class="row mtbox">
        <div class="col-md-2 col-sm-2 col-md-offset-1 box0">
            <div class="box1">
                <a href="/ThongKe/Index1">
                    <img src="https://img.icons8.com/carbon-copy/64/000000/book.png" />
                </a>
                <h3></h3>
            </div>
            <p>Có @ViewBag.SoLuongSach sách trong thư viện!</p>
        </div>

        <div class="col-md-2 col-sm-2 box0">
            <div class="box1">
                <a href="/ThongKe/Index2">
                    <img src="https://img.icons8.com/dusk/64/000000/reading.png" />
                </a>
                <h3></h3>
            </div>
            <p>Có @ViewBag.SoLuongDocGia độc giả!</p>
        </div>
        <div class="col-md-2 col-sm-2 box0">
            <div class="box1">
                <a href="/ThongKe/Index3">
                    <img src="https://img.icons8.com/dusk/64/000000/borrow-book.png" />
                </a>
                <h3</h3>
            </div>
            <p>Có @ViewBag.SoLuongPhieuMuon phiếu mượn!</p>
        </div>
        <div class="col-md-2 col-sm-2 box0">
            <div class="box1">
                <a href="/ThongKe/Index4">
                    <img src="https://img.icons8.com/dusk/64/000000/return-book.png" />
                </a>

                <h3</h3>
            </div>
            <p>Có @ViewBag.SoLuongPhieuTra phiếu trả!</p>
        </div>
        <div class="col-md-2 col-sm-2 box0">
            <div class="box1">
                <a href="/ThongKe/Index5">
                    <img src="https://img.icons8.com/wired/64/000000/return-book.png" />
                </a>
                <h3</h3>
            </div>
            <p>Có @ViewBag.SoLuongPhieuChuaTra phiếu chưa trả!</p>
        </div>
        <div class="col-md-2 col-sm-2 box0">
            <div class="box1">
                <a href="/ThongKe/Index6">
                    <img src="https://img.icons8.com/wired/64/000000/return-book.png" />
                </a>
                <h3</h3>
            </div>
            <p>Doanh thu tiền phạt($):@ViewBag.DoanhThu</p>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header"><i class="fas fa-table mr-1"></i>Sách</div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.MaSach)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TenSach)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TenTg)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NhaXb)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TheLoai)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SoLuong)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.GiaTien)
                            </th>
                            <th> @Html.DisplayNameFor(model => model.ImageUrl)</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MaSach)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TenSach)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TenTg)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NhaXb)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TheLoai)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SoLuong)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.GiaTien)
                                </td>
                                <td>
                                    <img src="@item.ImageUrl" style="width:100px;height:120px;" class="imageCell" />
                                </td>


                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
